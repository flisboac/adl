\newcommand{\novadefinicao}[3]{
    % #1: label
    % #2: nome
    % #3: descrição
    \longnewglossaryentry{#1}{
        type=\glossarytype,
        %see={[Vide:]{gls-#1}},
        name={\uppercase{\StrLeft{#2}{1}}\StrGobbleLeft{#2}{1}},
        text={#2}
    }{#3}
}

