\newcommand{\novoacronimo}[4]{
    % #1: label
    % #2: name
    % #3: long name
    % #4: description
    \newacronym[
        see={{gls-#1}}
        ]{#1} % label
        {#2} % name
        {#3} % long name
    \longnewglossaryentry{gls-#1}{
        type=\glossarytype,
        name={#3}
    }{#4}
    \newglossaryentry{acr-#1}{
        type=\glossarytype,
        name={#2},
        see={gls-#1},
        description={}
        %description={\glssee[Veja:]{acr-IA}{gls-IA}}
        %description={Vide \glsentrytext{gls-IA}}
    }
}


